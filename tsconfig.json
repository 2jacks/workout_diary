{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "./app/components/*"
      ],
      "@pages/*": [
        "./app/pages/*"
      ],
      "@services/*": [
        "./app/services/*"
      ],
      "@hooks/*": [
        "./app/hooks/*"
      ],
      "@utils/*": [
        "./app/utils/*"
      ],
      "@contexts/*": [
        "./app/contexts/*"
      ]
    },
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules"
  ]
}
