{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowJs": true,

    "paths": {
      "@components/*": [
        "./app/components/*"
      ],
      "@pages/*": [
        "./app/pages/*"
      ],
      "@services/*": [
        "./app/services/*"
      ],
      "@hooks/*": [
        "./app/hooks/*"
      ],
      "@utils/*": [
        "./app/utils/*"
      ],
      "@contexts/*": [
        "./app/contexts/*"
      ],
      "@constants/*": [
        "./app/constants/*"
      ],
      "%types/*": [
        "./app/types/*"
      ],
      "@models/*": [
        "./app/models/*"
      ],
      "@store/*": [
        "./app/store/*"
      ],
      "@http/*": [
        "./app/http/*"
      ]
    },

    "allowSyntheticDefaultImports": true,
    "esModuleInterop" : true,
  },
  "exclude": [
    "node_modules"
  ]
}
